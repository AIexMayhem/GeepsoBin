<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:backgroundTintMode="multiply">

    <View
        android:id="@+id/view4"
        android:layout_width="414dp"
        android:layout_height="135dp"
        android:background="#79ADDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageFont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_12_1" />

    <View
        android:id="@+id/sep_line1"
        android:layout_width="2dp"
        android:layout_height="105dp"
        android:layout_marginStart="273dp"
        android:layout_marginTop="16dp"
        android:background="#08605F"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <View
        android:id="@+id/sep_line2"
        android:layout_width="2dp"
        android:layout_height="105dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="16dp"
        android:background="#08605F"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <View
        android:id="@+id/main_line"
        android:layout_width="413dp"
        android:layout_height="2dp"
        android:background="#08605F"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_width="410dp"
        android:layout_height="690dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="132dp"
        android:inputType="text"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <ImageView
        android:id="@+id/imageSize1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="69dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_12_1" />


    <ImageButton
        android:id="@+id/undoButton"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/undo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undo_left_round_1" />

    <ImageButton
        android:id="@+id/doButton"
        android:layout_width="47dp"
        android:layout_height="42dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/undo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resource_do" />

    <ImageButton
        android:id="@+id/colorButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/palette_print_1" />

    <Spinner
        android:id="@+id/fonts_spinner"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:background="@drawable/for_spins"
        android:backgroundTint="#08605F"
        android:entries="@array/font_arrays"
        android:prompt="@string/font_prompt"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imageSize11"
        app:layout_constraintTop_toTopOf="@+id/imageSize11" />

    <Spinner
        android:id="@+id/size_spinner"
        style="@android:style/Widget.Spinner.DropDown"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:background="@drawable/for_spins"
        android:backgroundTint="#08605F"
        android:entries="@array/sizes_arrays"
        android:prompt="@string/size_prompt"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imageFont11"
        app:layout_constraintTop_toTopOf="@+id/imageFont11" />

    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="69dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="41dp"
            android:layout_height="44dp"
            android:background="@drawable/undo_button"
            android:src="@android:drawable/btn_star"
            app:srcCompat="@drawable/bold_1" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:background="@drawable/undo_button"
            android:src="@android:drawable/btn_star"
            app:srcCompat="@drawable/italic_1" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:background="@drawable/undo_button"
            app:srcCompat="@drawable/underline" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/openButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arrow_right" />

    <View
        android:id="@+id/view3"
        android:layout_width="260dp"
        android:layout_height="846dp"
        android:background="@drawable/borders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/uploadButton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:background="@drawable/button3_borders"
        app:srcCompat="@drawable/upload_2_1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="402dp" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:background="@drawable/button3_borders"
        app:srcCompat="@drawable/share_1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="227dp" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:background="@drawable/button3_borders"
        app:srcCompat="@drawable/save_1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="57dp" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="50dp"
        android:layout_height="123dp"
        android:backgroundTint="#DBF4AD"
        android:scaleType="center"
        app:srcCompat="@drawable/arrow_left"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="699dp" />

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:background="@drawable/button3_borders"
        app:srcCompat="@drawable/exit_1"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="579dp" />


</androidx.constraintlayout.widget.ConstraintLayout>